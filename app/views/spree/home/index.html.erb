            </a>
            <a href="#">
                <img alt="cartridges" src="/assets/diaries.jpg" />
                <!--<span class="ctg-title"></span>
                <span class="ctg-border">&nbsp;</span>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>-->
            </a>
        </div>
        <div class="categories-right">
            <a href="#">
                <img alt="cartridges" src="/assets/furniture.jpg" />
                <!--<span class="ctg-title"></span>
                <span class="ctg-border">&nbsp;</span>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>-->
            </a>
        </div>
    </div>
    <div id="tabs">
        <div class="container">
            <ul>
                <li>
                    <h3>
                        <a href="#special_sale">Sale Items</a>
                    </h3>
                </li>
                <li>
                    <h3>
                        <a href="#featured">Featured Products</a>
                    </h3>
                </li>
                <li>
                    <h3>
                        <a href="#latest">Latest Products</a>
                    </h3>
                </li>
            </ul>
        </div><!--.container-->

        <div id="special_sale" class="clearfix">
            <div class="container">
                <% @products.where(special: true).each do |e| %>
                    <div class="product">                                    
                        <div class="home_images">
                            <%= link_to image_tag('http://www.op-insight.co.uk/images/product/large/' + e.image_name + '.jpg'), e %>
                        </div>
                        <div class="product-desc">
                            <%= link_to e.short_description, e, class: 'threex3' %>
                        </div>
                        <div class="product-price">
                            €<%= e.price %>
                        </div>
                    </div>
                <% end %>
            </div><!--.container-->
        </div><!--#special_sale-->

        <div id="featured" class="clearfix">
            <div class="container">
                <% @products.where(featured: true).each do |e| %>
                    <div class="product">
                        <div class="home_images">
                            <%= link_to image_tag('http://www.op-insight.co.uk/images/product/large/' + e.image_name + '.jpg'), e %>
                        </div>
                        <div class="product-desc">
                            <%= link_to e.short_description, e, class: 'threex3' %>
                        </div>
                        <div class="product-price">
                            €<%= e.price %>
                        </div>
                    </div>
                <% end %>
            </div><!--.container-->
        </div><!--#featured-->

        <div id="latest" class="clearfix">
            <div class="container">
                <% @products.where(latest: true).each do |e| %>
                    <div class="product">
                        <div class="home_images">
                            <%= link_to image_tag('http://www.op-insight.co.uk/images/product/large/' + e.image_name + '.jpg'), e %>
                        </div>
                        <div class="product-desc">
                            <%= link_to e.short_description, e, class: 'threex3' %>
                        </div>
                        <div class="product-price">
                            €<%= e.price %>
                        </div>
                    </div>
                <% end %>
            </div><!--.container-->
        </div><!--#latest-->

    </div><!--#tabs-->
</div><!--main-content-->